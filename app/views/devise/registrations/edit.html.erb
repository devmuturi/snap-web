<layout-columns class="columns is-centered">
  <layout-column class="column box is-5 p-6 mt-6 m-4">
    <h2 class="title has-text-centered mb-5">
      Edit <%= resource_name.to_s.humanize %>
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "is-flex is-flex-direction-column" }) do |f| %>

      <div class="block">
        <%= f.label :name, class: "label" %>
        <%= f.text_field :name, class: "input", autofocus: true, autocomplete: "name", placeholder: "Your name" %>
      </div>

      <div class="block">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, class: "input", autocomplete: "email", placeholder: "Your email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="notification is-info is-light">
          Currently waiting confirmation for: 
          <strong><%= resource.unconfirmed_email %></strong>
        </div>
      <% end %>

      <div class="block">
        <%= f.label :password, class: "label" %>
        <p class="help">(leave blank if you don't want to change it)</p>
        <%= f.password_field :password, class: "input", autocomplete: "new-password", placeholder: "New password" %>
        <% if @minimum_password_length %>
          <p class="help"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
      </div>

      <div class="block">
        <%= f.label :password_confirmation, class: "label" %>
        <%= f.password_field :password_confirmation, class: "input", autocomplete: "new-password", placeholder: "Confirm password" %>
      </div>

      <div class="block">
        <%= f.label :current_password, class: "label" %>
        <p class="help">(we need your current password to confirm your changes)</p>
        <%= f.password_field :current_password, class: "input", autocomplete: "current-password", placeholder: "Current password" %>
      </div>

      <div class="field is-grouped is-justify-content-space-between mt-5">
        <div class="control">
          <%= f.submit "Update", class: "button is-primary is-medium" %>
        </div>
        <div class="control">
          <%= link_to "Back", :back, class: "button is-light is-medium" %>
        </div>
      </div>
    <% end %>
   
    <div class="box has-background-danger-light mt-6">
      <h3 class="title is-5 has-text-danger">Cancel my account</h3>
      <p>Unhappy? You can delete your account below:</p>
      <div class="mt-3">
        <%= button_to "Cancel my account", registration_path(resource_name),
              method: :delete,
              data: { confirm: "Are you sure you want to delete your account?", turbo_confirm: "Are you sure?" },
              class: "button is-danger is-light" %>
      </div>
    </div>
  </layout-column>
</layout-columns>
