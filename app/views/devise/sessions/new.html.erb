<layout-columns class="columns is-centered">
  <layout-column class="column is-5">
    <div class="box p-6 mt-6">
      <h2 class="title has-text-centered mb-5">
        <%= t("devise.sessions.new.title", default: "Log In") %>
      </h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "is-flex is-flex-direction-column") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class: "label" %>
          <div class="control has-icons-left">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-medium", placeholder: "Enter your email" %>
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, class: "label" %>
          <div class="control has-icons-left">
            <%= f.password_field :password, autocomplete: "current-password", class: "input is-medium", placeholder: "Enter your password" %>
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-4">
            <label class="checkbox">
              <%= f.check_box :remember_me %>
              <%= t("devise.sessions.new.remember_me", default: "Remember me") %>
            </label>
          </div>
        <% end %>

        <div class="block has-text-centered mt-5">
          <div class="buttons is-centered">
            <%= f.submit t("devise.sessions.new.sign_in", default: "Log In"),
                         class: "button is-primary is-large px-6 py-4 has-text-weight-semibold" %>
          </div>

          <p class="mt-3 has-text-grey">
            <%= t("devise.sessions.new.no_account", default: "Donâ€™t have an account?") %>
            <%= link_to t("devise.registrations.new.sign_up", default: "Sign Up"), new_user_registration_path, class: "has-text-link has-text-weight-semibold" %>
          </p>

          <p class="mt-2 has-text-grey">
            <%= link_to t("devise.sessions.new.forgot_your_password", default: "Forgot your password?"), new_user_password_path, class: "has-text-link has-text-weight-semibold" %>
          </p>
        </div>
      <% end %>
    </div>
  </layout-column>
</layout-columns>
