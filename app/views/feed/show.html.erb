<div class="container mt-3">
    <h1 class="title">
        <% if user_signed_in? %>
            <%= t(".welcome_with_name", name: current_user.name) %>
        <% else %>
            <%= t(".welcome") %>
        <% end %>
    </h1>

    <%= render "feed/search", search: @search %>

    <layout-columns class="columns is-centered is-multiline">
        <%= render partial: @listings, layout: "feed/listing_layout" %>
    </layout-columns>
</div>

<div class="container m-5 mt-6">
    <%= render "pagy/nav", pagy: @pagy %>
</div>